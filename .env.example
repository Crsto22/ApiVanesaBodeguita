# Variables de entorno para la API

# Entorno de desarrollo/producción
NODE_ENV=development

# Puerto de la aplicación
PORT=3000

# Orígenes permitidos para CORS (separados por comas)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://tu-dominio.com

# Configuración de Firebase
FIREBASE_PROJECT_ID=negociovanesa

# Para desarrollo local - ruta al archivo JSON de credenciales
# FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/service-account-key.json

# Para producción - JSON completo de las credenciales como string
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}

# Configuración de caché (en milisegundos)
CACHE_TTL=10800000  # 3 horas

# Configuración de logging
LOG_LEVEL=info

# Configuración de límites
MAX_PRODUCTOS_BUSQUEDA=10
MAX_PRODUCTOS_RELACIONADOS=10
PRODUCTOS_POR_PAGINA_DEFAULT=12
